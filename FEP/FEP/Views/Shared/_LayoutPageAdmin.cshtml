<script>
    var i = '@Session["Slider"]'
    var itemSliders = document.querySelectorAll('.nav-item.menu-items')
    var arrURL = ['@Url.Action("Dashboard", "Admin")', '@Url.Action("Products", "Admin")', '@Url.Action("Dashboard", "Admin")']
    itemSliders[i].classList.add('active')
    itemSliders[i].querySelector('a').setAttribute('href', arrURL[i])

    itemSliders.forEach(function (item, index) {
        item.onclick = function () {
            var curLink = document.querySelector('.nav-item.menu-items>a[href]')
            curLink.removeAttribute('href')
            document.querySelector('.nav-item.menu-items.active').classList.remove('active')
            item.classList.add('active')
            item.querySelector('a').setAttribute('href', arrURL[index])
        }
    })
</script>
