
@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_LayoutPageMain.cshtml";
    <link href="~/Content/css/cart.css" rel="stylesheet" />
}

<div class="body">
    <div class="container-dv">
        <div class="row">
            <div class="col-lg-12">
                <div class="shopping-cart">
                    <!-- Title -->
                    <div class="title">
                        Giỏ hàng của bạn
                    </div>

                    <div class="list">
                    </div>
                    <div class="item">
                        <div class="image">
                            <img src="/assets/img/san_pham_ban_chay/giay_nike_air_force_1_trang_full_white_sieu_cap/1.jpeg" alt="" />
                        </div>
                        <div class="description cart">
                            <span>DÉP BALENCIAGA POOL SLIDE BLACK WHITE (ĐEN)</span>
                        </div>
                        <div class="product__describe-custom cart">
                            <input class="product__describe-custom-reduced is-form" type="button" value="-">
                            <input aria-label="quantity" class="product__describe-custom-input" max="100" min="1" name="" type="number" value="1">
                            <input class="product__describe-custom-increase is-form" type="button" value="+">
                        </div>
                        <div class="info">
                            <div class="total-price"><h6 class="text-muted">698.000 ₫</h6></div>
                            <div class="size">38</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

